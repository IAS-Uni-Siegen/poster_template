% Gemini theme
% https://github.com/anishathalye/gemini

% ====================
% Definitions
% ====================

\definecolor{unigray}{RGB}{101, 114, 128}
\definecolor{blue}{RGB}{64, 115, 158}
\definecolor{darkblue}{RGB}{0, 56, 95}
\definecolor{lightblue}{RGB}{219, 242, 248}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=unigray,bg=white}
\setbeamercolor{palette secondary}{fg=unigray,bg=white}
\setbeamercolor{palette tertiary}{bg=unigray,fg=white}
\setbeamercolor{palette quaternary}{fg=unigray,bg=white}
\setbeamercolor{structure}{fg=darkblue}

% Headline
\setbeamercolor{headline}{fg=darkblue,bg=lightblue}
\setbeamercolor{headline rule}{bg=darkblue}

% Block
\setbeamercolor{block title}{fg=darkblue,bg=white}
\setbeamercolor{block separator}{bg=black}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=blue,bg=lightblue}
\setbeamercolor{block alerted separator}{bg=unigray}
\setbeamercolor{block alerted body}{fg=black,bg=lightblue}

% Example Block
\setbeamercolor{block example title}{fg=white,bg=darkblue}
\setbeamercolor{block example separator}{bg=unigray}
\setbeamercolor{block example body}{fg=white,bg=darkblue}

% Heading
\setbeamercolor{heading}{fg=white}

% Itemize
\setbeamercolor{item}{fg=darkblue}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
\setbeamertemplate{bibliography entry article}{}
\setbeamertemplate{bibliography entry title}{}
\setbeamertemplate{bibliography entry location}{}
\setbeamertemplate{bibliography entry note}{}
